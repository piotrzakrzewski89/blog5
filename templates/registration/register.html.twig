{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Rejestracja
{% endblock %}

{% block body %}
	<h1>Rejestracja</h1>
	{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.username) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword.first) }}
	{{ form_row(registrationForm.plainPassword.second) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn btn-lg btn-primary">Zarejestruj</button>
	{{ form_end(registrationForm) }}
	<br>
	<a class="btn btn-lg btn-primary" href="{{ relative_path('/reset-password')}}">Resetowanie has≈Ça</a>
{% endblock %}
