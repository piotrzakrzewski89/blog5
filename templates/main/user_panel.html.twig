{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Panel Użytkownika
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-md-10 mx-auto">
				{% include 'inc/flash_messeges.html.twig' %}

				{% if app.user.isVerified == false %}
					<div class='alert alert-danger'>Uwaga ! Twoje konto nie zostało zweryfikowane, nie będziesz miał dostępu do funkcjonalności serwisu.</div>
				{% endif %}
				<h1>Panel Użytkownika
				</h1>
				<a class="btn btn-lg btn-primary" href="{{ relative_path('/reset-password')}}">Zmiana hasła</a>
				<br><br>
				<button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#exampleModal">
					Usuwanie konta
				</button>

				<br><br>
				{% if app.user.isVerified == false %}
					<a class="btn btn-lg btn-primary" href="{{ path('app_send_mail_to_user', {'user' : app.user.id }) }}">Wyślij ponownie link aktywacyjny</a>
				{% endif %}
			</div>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Usuwanie konta</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Czy jesteś pewien że chcesz usunąc konto ? 
							Usunięcie konta wiąże się z usunięciem wszystkich danych przypisanych do konta.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
					<a class="btn btn-primary" href="{{ path('remove_account', {'user' : app.user.id }) }}">Usuń</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
