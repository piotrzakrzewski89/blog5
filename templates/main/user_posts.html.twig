{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	List postów
{% endblock %}

{% block body %}
<h1>Lista postów użytkownika
	{{ userData.username }}</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">tytuł</th>
			<th scope="col">data</th>
		</tr>
	</thead>
	<tbody>
		{% for post in userPosts %}
			<tr>
				<td>{{ loop.index }}</td>
				<td>
					<a href="{{ path('post_details', {'id' : post.id }) }}">{{ post.title }}<a/></td>
				</td>
				<td>{{ post.createdAt|date('d.m.Y H:i:s') }}
				</td>
			</tr>
		</td>
	</tbody>
</tr>{% endfor %}</tbody></table>{% endblock %}
